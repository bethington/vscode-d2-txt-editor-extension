{
  "name": "vscode-d2-txt-editor-extension",
  "displayName": "Diablo II .txt Editor",
  "publisher": "bethington",
  "description": "Interactive editor for Diablo II's tab-delimited .txt game data files",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bethington/vscode-d2-txt-editor-extension"
  },
  "version": "1.1.3",
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=14"
  },
  "categories": [
    "Data Science",
    "Programming Languages",
    "Other"
  ],
