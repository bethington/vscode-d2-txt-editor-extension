          "monprop.txt",
          "monseq.txt",
          "monsounds.txt",
          "monstats.txt",
          "monstats2.txt",
          "montype.txt",
          "monumod.txt",
          "npc.txt",
          "objects.txt",
          "objgroup.txt",
          "objmode.txt",
          "objpreset.txt",
          "objtype.txt",
          "overlay.txt",
          "pettype.txt",
          "playerclass.txt",
          "plrmode.txt",
          "plrtype.txt",
          "properties.txt",
          "qualityitems.txt",
          "rareprefix.txt",
          "raresuffix.txt",
          "runes.txt",
          "setitems.txt",
          "sets.txt",
          "shrines.txt",
          "skillcalc.txt",
          "skilldesc.txt",
          "skills.txt",
          "soundenviron.txt",
          "sounds.txt",
          "states.txt",
          "storepage.txt",
          "superuniques.txt",
          "treasureclassex.txt",
          "uniqueappellation.txt",
          "uniqueitems.txt",
          "uniqueprefix.txt",
          "uniquesuffix.txt",
          "wanderingmon.txt",
          "weapons.txt"
        ],
        "aliases": [
          "Diablo II Data Files"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "tsv.toggleExtension",
        "title": "TSV: Toggle Extension On/Off"
      },
      {
        "command": "tsv.toggleHeader",
        "title": "TSV: Toggle First Row as Header"
      },
      {
        "command": "tsv.toggleSerialIndex",
        "title": "TSV: Toggle Serial Index Column"
      },
      {
        "command": "tsv.changeFontFamily",
        "title": "TSV: Change Font Family"
      },
      {
        "command": "tsv.openAsText",
        "title": "TSV: Open as Raw Text"
      },
      {
        "command": "diablo2TxtEditor.setBasePath",
        "title": "Diablo II: Set Base Path"
      },
      {
        "command": "diablo2TxtEditor.openDiffViewer",
        "title": "Diablo II: Compare with Base Files"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Diablo II .txt Editor Configuration",
      "properties": {
        "diablo2TxtEditor.basePath": {
          "type": "string",
          "default": "",
          "description": "Path to the base Diablo II game data files directory (e.g., 'F:\\D2R-Data\\data'). Should contain 'global', 'hd', and 'local' folders.",
          "scope": "application"
        },
        "tsv.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable the TSV custom editor."
        },
        "tsv.treatFirstRowAsHeader": {
          "type": "boolean",
          "default": true,
          "description": "Treat the first row of TSV as a header."
        },
        "tsv.addSerialIndex": {
          "type": "boolean",
          "default": false,
          "description": "Add a serial index column at the left of the table."
        },
        "tsv.fontFamily": {
          "type": "string",
          "default": "",
          "description": "Font family used by the TSV custom editor. Leave empty to inherit editor.fontFamily.",
          "scope": "application"
        },
        "tsv.cellPadding": {
          "type": "number",
          "default": 4,
          "description": "Vertical padding in pixels for table cells."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "tsv.editor",
        "displayName": "Diablo II Data Files Editor",
        "selector": [
