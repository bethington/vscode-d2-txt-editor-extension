{
  "name": "vscode-d2-txt-editor-extension",
  "displayName": "Diablo II .txt Editor",
  "publisher": "bethington",
  "description": "For viewing and editing Diablo IIâ€™s tab-delimited .txt game data files",
  "icon": "images/icon.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/bethington/vscode-d2-txt-editor-extension"
  },
  "version": "1.1.3",
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=14"
  },
  "categories": [
    "Data Science",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:tsv",
    "onCommand:tsv.toggleExtension",
    "onCommand:tsv.toggleHeader",
    "onCommand:tsv.toggleSerialIndex",
    "onCommand:tsv.changeFontFamily"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tsv",
        "extensions": [
          ".tsv"
        ],
        "aliases": [
          "TSV",
          "tsv"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "tsv.toggleExtension",
        "title": "TSV: Toggle Extension On/Off"
      },
      {
        "command": "tsv.toggleHeader",
        "title": "TSV: Toggle First Row as Header"
      },
      {
        "command": "tsv.toggleSerialIndex",
        "title": "TSV: Toggle Serial Index Column"
      },
      {
        "command": "tsv.changeFontFamily",
        "title": "TSV: Change Font Family"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TSV Extension Configuration",
      "properties": {
        "tsv.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable the TSV custom editor."
        },
        "tsv.treatFirstRowAsHeader": {
          "type": "boolean",
          "default": true,
          "description": "Treat the first row of TSV as a header."
        },
        "tsv.addSerialIndex": {
          "type": "boolean",
          "default": false,
          "description": "Add a serial index column at the left of the table."
        },
        "tsv.fontFamily": {
          "type": "string",
          "default": "",
          "description": "Font family used by the TSV custom editor. Leave empty to inherit editor.fontFamily.",
          "scope": "application"
        },
        "tsv.cellPadding": {
          "type": "number",
          "default": 4,
          "description": "Vertical padding in pixels for table cells."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "tsv.editor",
        "displayName": "TSV",
        "selector": [
          {
            "filenamePattern": "*.tsv"
          }
        ]
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint **/*.ts",
    "package": "vsce package",
    "test": "npm run compile && node --test out/test/provider-utils.test.js out/test/security.test.js"
  },
  "dependencies": {
    "font-list": "^1.5.1",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.19",
    "@types/papaparse": "^5.3.16",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "vsce": "^2.11.0"
  }
}