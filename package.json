    "onCommand:tsv.toggleExtension",
    "onCommand:tsv.toggleHeader",
    "onCommand:tsv.toggleSerialIndex",
    "onCommand:tsv.changeFontFamily",
    "onCommand:tsv.openAsText",
    "onCommand:diablo2TxtEditor.setBasePath",
    "onCommand:diablo2TxtEditor.openDiffViewer"
  ],
  "main": "./out/extension.js",
