  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint **/*.ts",
    "package": "vsce package",
    "test": "npm run compile && node --test out/test/provider-utils.test.js out/test/security.test.js out/test/performance.test.js out/test/integration.test.js",
    "test:unit": "npm run compile && node --test out/test/provider-utils.test.js",
    "test:security": "npm run compile && node --test out/test/security.test.js",
    "test:performance": "npm run compile && node --test out/test/performance.test.js",
    "test:integration": "npm run compile && node --test out/test/integration.test.js",
    "test:coverage": "npm run compile && node --test --experimental-test-coverage out/test/provider-utils.test.js out/test/security.test.js out/test/performance.test.js out/test/integration.test.js"
